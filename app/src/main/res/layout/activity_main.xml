<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/txttitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="      LOGIN DE USUARIO"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_margin="10dp"
            android:background="@color/azul" />

        <TextView
            android:id="@+id/lb_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USUARIO:"
            android:textSize="20sp"
            android:textColor="@color/azul"
            android:layout_below="@id/txttitulo"
            android:layout_marginTop="68sp"
            />

        <EditText
            android:id="@+id/txtnombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lb_usuario"
            android:layout_marginEnd="28dp"/>

        <TextView
            android:id="@+id/lb_clave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLAVE:"
            android:textSize="20sp"
            android:textColor="@color/azul"
            android:layout_below="@id/txtnombre"
            android:layout_marginTop="30sp"
            />

        <EditText
            android:id="@+id/txtclave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginEnd="28dp"
            android:layout_below="@id/lb_clave"/>

        <Button
            android:id="@+id/btn_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INICIAR SESION"
            android:layout_below="@id/txtclave"
            android:layout_marginTop="68sp"
            />

        <TextView
            android:id="@+id/lb_boton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="SI ERES NUEVO REGISTRATE AQUI"
            android:textColor="@color/rojo"
            android:layout_below="@id/btn_inicio"
            android:layout_marginTop="30sp"
            />

        <TextView
            android:id="@+id/lb_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/rojo"
            android:layout_below="@id/lb_boton"
            android:layout_marginTop="30sp"
            />




    </LinearLayout>
</layout>